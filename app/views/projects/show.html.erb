<div class="breadcrumbs"><%= link_to 'Projects', projects_path %> &raquo; <%=h @project.name%></div>
<div class="clear"></div>

<div id="project_info">

<%= title @project.name, :h2 %>
<div class="status status_<%=h @project.status.id %>"><%=h @project.status.name %></div>
<div class="clear"></div>

<dl class="team">
<dt>Client:</dt><dd><%= link_to @project.client.name, client_path(@project.client) %></dd>
<dt>Partner:</dt><dd><%= link_to @project.partner.full_name, employee_path(@project.partner) %></dd>
<dt>Manager:</dt><dd><%= link_to @project.manager.full_name, employee_path(@project.manager) %></dd>
</dl>

<dl class="dates">
<dt>Start Date:</dt><dd><%= @project.date_start.to_datetime.to_s(:full_date) %></dd>
<dt>End Date:</dt><dd><%= @project.date_end.to_datetime.to_s(:full_date) %></dd>
</dl>
<div class="clear"></div>

<div class="description">
<%= simple_format  @project.description %>
</div><!-- .description -->

</div><!-- #project_info -->
<div class="clear"></div>


<%= render :partial => 'jobs/show_jobs', :locals => {:jobs => @jobs, :project => @project} %>

<% content_for :sidebar do %>

<div id="options">
<h3>Options</h3>
<ul>
<li><%= link_to 'Edit project details', edit_project_path(@project), :class => "button button_edit_project" %></li>
<li><%= link_to 'Delete this project', @project, :confirm => 'Are you sure?', :method => :delete, :class => "button button_delete_project" %></li>
</ul>
</div><!-- #options -->
<% end %>