<table class="generic">
    <% if projects.count == 0 %>
        <tr><td colspan="7" class="message">No projects to show</td></tr>
    <% else %>
		<thead>
	    <tr>
	        <th class="{sorter: false}">&nbsp;</th>
	        <th>Name</th>
	        <th>Client</th>
	        <th>Partner</th>
	        <th>Manager</th>
	        <th class="jobs">Jobs</th>
	        <th class="expenses">Acc &euro;</th>
	    </tr>
	    </thead>  
		<tbody>
        <% projects.each do |project| %>
        <tr class="<%= cycle('odd', 'even') %>">
            <td class="status status_<%= project.status.id %>" title="<%= project.status.name %>">&nbsp;</td>
            <td class="name"><%= link_to project.name, project %>                 </td>   
            <td><%= link_to project.client.name, project.client %>          </td>
            <td><%= link_to project.partner.short_name, project.partner %>    </td>
            <td><%= link_to project.manager.short_name, project.manager %>    </td>
            <td class="job"><%=h project.number_of_jobs    %>    </td>
            <td class="expense"><%= number_to_currency(project.accumulated_expenses, :unit => "&euro;", :separator => ",", :delimiter => ".", :format => "%n %u") %> </td>
        </tr>
        <% end %>
		<tbody>
    <% end %>
</table>

<% unless projects.blank? %>
<% link_to(new_project_job_path(@project, @job, :anchor => "new_job"), :class => "grey_button", :rel => "modal") do %><span>New Job</span><% end %>
<% end %>