<table class="generic">
<% if projects.count == 0 %>
    <tr><td colspan="7" class="message">This client doesn't have any projects yet, <%= link_to "add a project", new_project_path(@project) %> </td></tr>
<% else %>
	<thead>
	<tr>
	    <th class="{sorter: false}">&nbsp;</th>
	    <th>Name</th>
	    <th>Partner</th>
	    <th>Manager</th>
	    <th class="jobs">Jobs</th>
	    <th class="hours">Hours</th>
	    <th class="expenses">Acc &euro;</th>
	</tr>
	</thead>
    <% projects.each do |project| %>
    <tr class="<%= cycle('odd', 'even') %>">
        <td class="status status_<%= project.status.id %>">&nbsp;</td>
        <td class="name"><%= link_to project.name, project %></td>   
        <td><%= link_to project.partner.short_name, project.partner %></td>
        <td><%= link_to project.manager.short_name, project.manager %></td>
        <td class="job"><%=h project.number_of_jobs %></td>
        <td class="hours"><%=h project.number_of_hours %></td>
        <td class="expense"><%= format_currency(project.accumulated_expenses) %> </td>
    </tr>
    <% end %>
<% end %>
</table>

<% unless projects.blank? %>
<%= render :partial => 'shared/status_legend' %>

<% link_to(new_project_path(@project), :class => "grey_button") do %><span>New Project</span><% end %>
<% end %>