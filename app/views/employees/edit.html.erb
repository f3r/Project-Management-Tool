<div class="breadcrumbs"><%= link_to 'Employees', employees_path %> &raquo; <%= link_to @employee.full_name, @employee %> &raquo; Edit details</div>
<div class="clear"></div>

<%= title "Edit employee", :h2 %>

<%= render :partial => 'employees/form_employee' %>

<% content_for :sidebar do %>
	<% if @employee.photo.exists? then %>
	<div class="employee_photo">
	<%= image_tag @employee.photo.url(:small) %>
	</div><!-- .employee_photo -->
	<% end %>

    <!-- TODO Add password-change link -->

<div id="options">
<h3>Other options</h3>
<ul>
<li><%= link_to "Change profile picture", "#", :class => "button button_edit_picture " %></li>
<li>
  <% semantic_form_for @employee, :url => employee_path, :html => { :multipart => true } do |form| %>
    <%= form.file_field :photo %>
    <%= form.commit_button :label => "Update Picture" %> <%= link_to_if(@employee.id.present?, "Cancel", @employee) do link_to("Cancel", employees_path) end %>
  <% end %>
</li>
<li><%= link_to "Change Password", "#", :class => "button button_edit_password " %></li>
</ul>
</div><!-- #options -->

<% end %>
