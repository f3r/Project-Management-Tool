<% semantic_form_for @employee, :url => change_password_path do |form| %>
	<% form.inputs "Change account password" do %>
		<%= form.input :password, :label => "New password", :as => :password, :input_html => { :size => TEXT_FIELD_SIZE, :maxlength => TEXT_FIELD_MAX_LENGTH } %>
		<%= form.input :password_confirmation, :label => "Confirm password", :as => :password, :input_html => { :default => "", :size => TEXT_FIELD_SIZE, :maxlength => TEXT_FIELD_MAX_LENGTH } %>
	<% end %>
	<% form.buttons do %>
		<%= form.commit_button :label => "Update Password" %> <%= link_to "Cancel", edit_employee_path(@employee), :onclick => "Boxy.get(this).hide();return false;" %>
	<% end %>
<% end %>