<tr class="timeRep_job <%= cycle('odd', 'even') %>">
	<td class="title"><%= job_title %> <% idAll = 'p'+pid+'_j'+id+'_' %></td>
	<td><input class="hours nosign" id="<%= idAll+'1' %>" name="job[<%= id %>][mon]" size="2" type="text" value="<%= ftoi(hours.h_mon) %>"/></td>
	<td><input class="hours nosign" id="<%= idAll+'2' %>" name="job[<%= id %>][tue]" size="2" type="text" value="<%= ftoi(hours.h_tue) %>"/></td>
	<td><input class="hours nosign" id="<%= idAll+'3' %>" name="job[<%= id %>][wed]" size="2" type="text" value="<%= ftoi(hours.h_wed) %>"/></td>
	<td><input class="hours nosign" id="<%= idAll+'4' %>" name="job[<%= id %>][thu]" size="2" type="text" value="<%= ftoi(hours.h_thu) %>"/></td>
	<td><input class="hours nosign" id="<%= idAll+'5' %>" name="job[<%= id %>][fri]" size="2" type="text" value="<%= ftoi(hours.h_fri) %>"/></td>
	<td id="<%= idAll+'total' %>">0</td>
</tr>