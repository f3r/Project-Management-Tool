<% form_for :user, :url => { :action => "login" }, :html => {:id => 'login'} do |f| -%>
  	<div class="form_row">
  		<label>Email</label>
		<%= f.text_field :email, :size => TEXT_FIELD_SIZE, :maxlength => TEXT_FIELD_MAX_LENGTH %>
  	</div>
	<div class="form_row">
  		<label>Password</label>
		<%= f.password_field :password, :size => TEXT_FIELD_SIZE, :maxlength => TEXT_FIELD_MAX_LENGTH %>
  	</div>
	<div class="form_row">
	  	<%= link_to 'Forgotten your password?', {:controller =>'site', :action => 'remind'}, {:class => 'more'} %>
	</div>
	<div class="form_row">
	  	<%= submit_tag 'Login' %>
	</div>
<% end -%>